<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".animation.AnimationHomeActivity">

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@mipmap/shishi160228325"
        android:scaleType="center"
        android:transitionName="fab"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="xml实现"
                android:textSize="16sp"
                android:textColor="@color/midnightblue"
                android:gravity="center_vertical"
                android:paddingStart="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRotate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="rotate"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnTranslate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="trans"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnTransScreen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="transScreen"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnScale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="scale"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnSlpha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="alpha"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnSet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Set"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Java代码实现"
                    android:textSize="16sp"
                    android:textColor="@color/midnightblue"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"/>

                <TextView
                    android:id="@+id/tvValue"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    tools:text="Java代码实现"
                    android:textSize="16sp"
                    android:textColor="@color/midnightblue"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnValue"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:text="数值发生器"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnObject"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:text="Object动画"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnPath"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Object路径"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnExplode"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="Explode"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnSlide"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:text="Slide"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnFade"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="Fade"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/btn_bg"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>